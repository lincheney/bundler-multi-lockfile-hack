# Gemfile structure:
#   Gemfile
#       Gemfile.other
#       Gemfile.rails
#           Gemfile.rails.test

source 'https://rubygems.org'

gem 'rake'
gem 'sqlite3'

group :doc do
    gem 'rdoc'
    gem 'sdoc'
end

group :test do
    gem 'rspec'
end

eval_gemfile File.expand_path('../Gemfile.rails', __FILE__)
eval_gemfile File.expand_path('../Gemfile.other', __FILE__)

require File.expand_path('../../bundler/multi_lockfile_hack.rb', __FILE__)
extend Bundler::MultiLockfileHack

generate_lockfile(groups: :doc, lockfile: 'doc.lock')
generate_lockfile(groups: [:doc, :test], lockfile: 'doc.test.lock')
generate_lockfile(gemfile: File.expand_path('../Gemfile.other', __FILE__), lockfile: 'other.lock')
generate_lockfile(gemfile: File.expand_path('../Gemfile.rails', __FILE__), groups: :test, lockfile: 'rails.test.lock')
